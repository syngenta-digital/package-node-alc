{
    "name": "@syngenta-digital/alc",
    "author": "Paul Cruse, Engineering Lead, Syngenta Digital, USCO",
    "main": "src/index.js",
    "version": "1.0.9",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/syngenta-digital/package-node-alc.git"
    },
    "bugs": {
        "url": "https://github.com/syngenta-digital/package-node-alc/issues"
    },
    "scripts": {
        "test": "unittest=true nyc mocha --recursive",
        "report": "UNIT_TEST=true nyc report --reporter=lcov",
        "lint": "eslint src/**"
    },
    "dependencies": {
        "ajv": "8.10.0",
        "aws-sdk": "2.1105.0",
        "js-yaml": "4.1.0",
        "json-schema-merge-allof": "^0.8.1",
        "json-schema-ref-parser": "9.0.9",
        "xml2js": "0.4.23"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "mocha": "^8.1.1",
        "mocha-junit-reporter": "^2.0.0",
        "mocha-multi-reporters": "^1.1.7",
        "mochawesome": "^6.1.1",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": ">=14.17.0"
    },
    "nyc": {
        "temp-directory": "./node_modules/.nyc_output"
    },
    "eslintConfig": {
        "env": {
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "plugins": [
            "prettier"
        ],
        "extends": [
            "plugin:prettier/recommended"
        ],
        "rules": {
            "prettier/prettier": [
                "warn",
                {
                    "trailingComma": "none",
                    "printWidth": 120,
                    "tabWidth": 4,
                    "singleQuote": true,
                    "bracketSpacing": false,
                    "arrowParens": "always"
                }
            ],
            "eqeqeq": "error",
            "prefer-destucturing": 0,
            "no-global-assign": 0,
            "rest-spread-spacing": 1,
            "no-restricted-syntax": 0,
            "consistent-return": 0,
            "import/no-dynamic-require": 0,
            "no-param-reassign": 0,
            "global-require": 0,
            "class-methods-use-this": 0,
            "no-underscore-dangle": 0,
            "camelcase": 0
        }
    }
}
